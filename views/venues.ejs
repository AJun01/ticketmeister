<!DOCTYPE html>
<html lang="<%= locale %>">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Venues</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <h1><%= __('welcome') %></h1>
  <button onclick="window.location.href='/users/account'">
    <%= __('Profile') %>
  </button>

  <% venues.forEach((venue) => { %>
    <div class="venue">
      <h2><%= venue.title %></h2>
      <p><%= venue.slogan %></p>
      <img
        src="<%= venue.showcase_image %>"
        alt="<%= venue.title %>"
        style="width: 100%; height: auto;"
      />

      <div class="slideshow-container">
        <% venue.focused_images.forEach((image, index) => { %>
          <div class="mySlides fade">
            <div class="numbertext"><%= index + 1 %> / <%= venue.focused_images.length %></div>
            <img src="<%= image %>" style="width:100%">
          </div>
        <% }); %>
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>
      </div>
      <div style="text-align:center">
        <% venue.focused_images.forEach((_, index) => { %>
          <span class="dot" onclick="currentSlide(+1)"></span>
        <% }); %>
      </div>

      <button onclick="location.href='/cart/add/<%= venue.id %>'">
        <%= __('purchase_ticket') %>
      </button>
    </div>

    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
  <% }); %>

  <script src="/scripts/slider.js"></script>
</body>
</html>